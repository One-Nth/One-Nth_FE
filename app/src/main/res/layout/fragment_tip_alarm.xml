<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notification_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 🔔 알림 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/main_green"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <ImageView
                    android:src="@drawable/notification_ic_1"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="어쩌고 저쩌고 여기 너무 맛있다"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="2초 전"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_time"
                    android:textSize="13dp"
                    android:layout_marginTop="9dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 🔔 알림 2 (복사) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/main_green"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <ImageView
                    android:src="@drawable/notification_ic_2"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="어쩌고 저쩌고 여기 너무 맛있다"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="1분 전"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_time"
                    android:textSize="13dp"
                    android:layout_marginTop="9dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 🔔 알림 3 (복사) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/main_green"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <ImageView
                    android:src="@drawable/notification_ic_1"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="같이 사요! 여기도 괜찮아요~"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:text="5분 전"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notification_time"
                    android:textSize="13dp"
                    android:layout_marginTop="9dp" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>