<!-- res/layout/activity_login.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- 뒤로가기 버튼과 로그인 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ep_arrow_up_bold"
            android:contentDescription="뒤로가기"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/main_black"
            android:layout_marginStart="42dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="15dp" />

    <!-- 이메일 입력 영역 -->
    <TextView
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:text="이메일"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="ex) abcd1234@example.com"
        android:textSize="13sp"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"/>
    <!-- 비밀번호 입력 영역 -->
    <TextView
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:text="비밀번호"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="비밀번호를 입력해주세요."
        android:textSize="13sp"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>

    <!-- 계정 찾기 로그인 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp">

        <!-- 첫 번째 이미지 버튼 -->
        <ImageButton
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:src="@drawable/frame_427318915"
            android:background="@null"
            android:contentDescription="버튼1"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="17dp" />

        <!-- 두 번째 이미지 버튼 -->
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:src="@drawable/frame_427318914"
            android:background="@null"
            android:contentDescription="버튼2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:id="@+id/singleImageButton"
        android:layout_width="326dp"
        android:layout_height="49dp"
        android:src="@drawable/frame_427318926"
        android:background="@null"
        android:contentDescription="하단 단일 버튼"
        android:scaleType="centerInside"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp" />

</LinearLayout>

