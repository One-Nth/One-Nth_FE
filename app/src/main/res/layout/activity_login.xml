<!-- res/layout/activity_login.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- 뒤로가기 버튼과 로그인 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ep_arrow_up_bold"
            android:contentDescription="뒤로가기"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            style="@style/PretendardSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="@color/main_black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/image_placeholder"
        android:layout_marginBottom="15dp" />

    <!-- 이메일 입력 영역 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:text="이메일"
        android:textColor="@color/main_black"
        android:layout_marginTop="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        style="@style/PretendardBody5"
        android:id="@+id/emailEditText"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="ex) abcd1234@example.com"
        android:textColor="@color/light_gray"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:paddingStart="-100dp"
        android:inputType="textEmailAddress"
        android:gravity="start|top"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp" />

    <!-- 비밀번호 입력 영역 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:text="비밀번호"
        android:textColor="@color/main_black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        style="@style/PretendardBody5"
        android:id="@+id/passwordEditText"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="비밀번호를 입력해주세요."
        android:textColor="@color/light_gray"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:paddingStart="-140dp"
        android:inputType="textPassword"
        android:gravity="start|top"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"/>


    <!-- 계정 찾기 로그인 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp">

        <!-- 첫 번째 이미지 버튼 -->
        <ImageButton
            android:id="@+id/button1"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:src="@drawable/frame_427318915"
            android:background="@null"
            android:contentDescription="버튼1"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="17dp" />

        <!-- 두 번째 이미지 버튼 -->
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:src="@drawable/frame_427318914"
            android:background="@null"
            android:contentDescription="버튼2" />
    </LinearLayout>
</LinearLayout>

