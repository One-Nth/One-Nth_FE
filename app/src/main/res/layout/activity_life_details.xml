<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_life_tips_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    tools:context=".LifeTipsSearchActivity">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search_result"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/main_white"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 뒤로가기 아이콘 -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ep_arrow_up_bold"
        android:contentDescription="뒤로가기"
        app:layout_constraintTop_toTopOf="@id/toolbar_search_result"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 검색어 -->
    <TextView
        android:id="@+id/tvSearchKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모기약"
        android:textColor="@color/main_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/toolbar_search_result"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_search_result"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 알림 아이콘 영역 -->
    <LinearLayout
        android:id="@+id/layout_notification_area"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingEnd="30dp"
        android:gravity="end|center_vertical"
        android:background="@color/main_white"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_alarmbell"
            android:contentDescription="알림" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search_result"
        app:layout_constraintBottom_toTopOf="@id/commentInputContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 작성자 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/avatar"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PretendardSubtitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:textColor="@color/main_black" />

                    <TextView
                        style="@style/PretendardSubtitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00동 · 3분전"
                        android:textColor="@color/light_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- 제목 -->
            <TextView
                style="@style/PretendardSubtitle1"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/main_black"
                android:text="OOO모기약 어떤가요?" />

            <!-- 내용 -->
            <TextView
                style="@style/PretendardBody5"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:id="@+id/tvDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/light_gray"
                android:text="사진 첨부합니다 써보신 분들 후기 알려주세요~" />

            <!-- 첨부 이미지 -->
            <ImageView
                android:id="@+id/ivDetailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rectangle_56" />

            <!-- 아이콘 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_board_comment" />
                <TextView
                    style="@style/PretendardSubtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/main_black"
                    android:layout_marginStart="4dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_board_like" />

                <TextView
                    style="@style/PretendardSubtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/main_black"
                    android:layout_marginStart="4dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/material_symbols_bookmark_rounded" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_share_gray" />

                <TextView
                    style="@style/PretendardSubtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회수 24"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/light_gray" />
            </LinearLayout>

            <ImageView
                android:layout_width="393dp"
                android:layout_height="7dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/rectangle_57" />

            <!-- 댓글 리스트 예시 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp">

                <!-- 작성자 정보 + 댓글 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCommentNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="asdds"
                            android:textStyle="bold"
                            android:textColor="@color/main_black" />

                        <TextView
                            android:id="@+id/tvCommentContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저 여름마다 잘 쓰고 있어요"
                            android:textColor="@color/main_black"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 좋아요 / 답글 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="40dp">

                    <TextView
                        android:id="@+id/tvLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좋아요"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="답글쓰기"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/light_gray" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- 댓글 작성 입력창 -->
    <LinearLayout
        android:id="@+id/commentInputContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main_white"
        android:paddingHorizontal="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/tabler_photo" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/comment_input_border"
            android:hint="댓글을 작성하세요."
            android:paddingHorizontal="13dp"
            android:textColorHint="#888888"
            android:textColor="@color/main_black"
            android:gravity="center_vertical|start"
            android:inputType="text" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>