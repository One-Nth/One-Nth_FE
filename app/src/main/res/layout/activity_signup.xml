<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ep_arrow_up_bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            style="@style/PretendardSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/main_black"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/image_placeholder"
        android:layout_marginBottom="15dp" />

    <!-- 이메일 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- 이메일 입력 + 인증 버튼 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <EditText
            style="@style/PretendardBody5"
            android:id="@+id/emailEditText"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="ex) 1234@naver.com"
            android:textColor="@color/light_gray"
            android:background="@drawable/edittext_border2"
            android:paddingEnd="90dp"
            android:paddingStart="-80dp"
            android:inputType="textEmailAddress"/>

        <ImageButton
            android:id="@+id/btnVerifyEmail"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:src="@drawable/frame_427318993"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <!-- 인증번호 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:text="인증번호"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- 인증번호 입력 + 타이머 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp">


        <EditText
            style="@style/PretendardBody5"
            android:id="@+id/verificationCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="인증번호를 입력해주세요."
            android:textColor="@color/light_gray"
            android:paddingEnd="60dp"
            android:paddingStart="-80dp"
            android:inputType="number"
            android:background="@drawable/edittext_border" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/light_gray"
            android:textSize="13sp"/>
    </RelativeLayout>


    <!-- 비밀번호 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:text="비밀번호"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        style="@style/PretendardBody5"
        android:id="@+id/passwordEditText"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="비밀번호를 입력해주세요."
        android:textColor="@color/light_gray"
        android:background="@drawable/edittext_border"
        android:paddingStart="-120dp"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- 비밀번호 확인 -->
    <TextView
        style="@style/PretendardSemibold3"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:text="비밀번호 확인"
        android:textColor="@color/main_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        style="@style/PretendardBody5"
        android:id="@+id/passwordConfirmEditText"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="비밀번호를 다시 입력해주세요."
        android:textColor="@color/light_gray"
        android:background="@drawable/edittext_border"
        android:paddingStart="-100dp"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"/>

    <!-- 다음으로 버튼 -->
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:src="@drawable/nextbutton"
        android:background="@null"
        android:contentDescription="다음으로"
        android:layout_marginTop="20dp"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="20dp"/>

</LinearLayout>
