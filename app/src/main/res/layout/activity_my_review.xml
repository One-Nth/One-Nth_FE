<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ep_arrow_up_bold"
                android:contentDescription="뒤로가기"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                style="@style/PretendardSubtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 거래 후기"
                android:textColor="@color/main_black"
                android:layout_marginStart="30dp" />
        </LinearLayout>

        <!-- 유저 박스 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/my_review_border_box1"
            android:padding="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/PretendardSubtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="abced"
                    android:textColor="@color/main_black"/>

                <TextView
                    style="@style/PretendardBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="00시 00동"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- 거래 내역 요약 -->
        <TextView
            style="@style/PretendardSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="거래 내역"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/main_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- 판매 박스 -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="100dp"
                android:background="@drawable/my_review_border_box2"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginEnd="8dp">>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:text="판매"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:text="100"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_black" />

                <TextView
                    android:layout_width="34dp"
                    android:layout_height="20dp"
                    android:text="+20%"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_black" />
            </LinearLayout>

            <!-- 리뷰 박스 -->
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="100dp"
                android:background="@drawable/my_review_border_box2"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginStart="8dp">>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:text="리뷰"
                    android:textColor="@color/light_gray" />

                <ImageView
                    android:layout_width="58.26dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_profile_star_5" />

                <TextView
                    android:layout_width="23dp"
                    android:layout_height="28dp"
                    android:text="50"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/main_black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/btn_ok" />


        <!-- 구매자 거래 후기 -->
        <TextView
            android:id="@+id/buyerReviewTitle"
            android:layout_width="336dp"
            android:layout_height="24dp"
            android:text="구매자 거래 후기"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:textColor="@color/main_black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="25dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:overScrollMode="never"
            android:scrollbars="none" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F4F4"
            android:layout_marginTop="100dp"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/editMyReviewText"
                android:layout_width="336dp"
                android:layout_height="24dp"
                android:text="내가 쓴 후기 수정하기"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:textColor="@color/main_black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_9"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="12dp"
                android:padding="1dp"
                android:gravity="center_vertical">

                <!-- 썸네일 회색 네모 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/rectangle_11"
                    android:clipToOutline="true" />

                <!-- 상품 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품명"
                        style="@style/PretendardSemibold3"
                        android:textColor="@color/main_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격 / 수량 / 원래 가격"
                        style="@style/PretendardBody4"
                        android:textColor="@color/N_saved_gray"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_9"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:padding="1dp"
                android:gravity="center_vertical">

                <!-- 썸네일 회색 네모 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/rectangle_11"
                    android:clipToOutline="true" />

                <!-- 상품 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품명"
                        style="@style/PretendardSemibold3"
                        android:textColor="@color/main_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격 / 수량 / 원래 가격"
                        style="@style/PretendardBody4"
                        android:textColor="@color/N_saved_gray"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
